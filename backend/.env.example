# Server Configuration
PORT=3000

# Database
DATABASE_URL="file:./dev.db"

# Authentication
# Generate a random secret with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-random-secret-here"

# Admin password for accessing /admin
ADMIN_PASSWORD="your-secure-password"

# Vibecode Integration
# Set to "true" to disable Vibecode-specific features for local development
DISABLE_VIBECODE=false

# Allowed Origins (comma-separated)
# For production: https://bigfunhikes.com
# For dev subdomain: https://dev.bigfunhikes.com
# For local: http://localhost:8000,http://192.168.x.x:8000
ALLOWED_ORIGINS="http://localhost:8000"
