generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model JournalEntry {
  id                  String   @id @default(uuid())
  date                DateTime
  dayNumber           Int
  title               String
  content             String
  milesHiked          Float
  elevationGain       Int?
  totalMilesCompleted Float
  latitude            Float?
  longitude           Float?
  locationName        String?
  weather             String?
  gpxData             String?
  entryType           String   @default("trail")
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  suuntoData          String?
  photos              Photo[]

  @@index([date])
  @@index([dayNumber])
  @@index([entryType])
}

model Photo {
  id             String       @id @default(uuid())
  journalEntryId String
  url            String
  caption        String?
  order          Int
  latitude       Float?
  longitude      Float?
  takenAt        DateTime?
  createdAt      DateTime     @default(now())
  journalEntry   JournalEntry @relation(fields: [journalEntryId], references: [id], onDelete: Cascade)

  @@index([journalEntryId])
}

// =============================================================================
// Activity Replay Studio (Sub-Project)
// This model is separate from the parent app and used only by the Replay Studio
// =============================================================================

model ReplayStudioUpload {
  id          String    @id @default(uuid())
  shareId     String    @unique @default(cuid())
  filename    String
  suuntoJson  String    // Raw JSON as uploaded
  parsedData  String    // Normalized data for player
  createdAt   DateTime  @default(now())
  expiresAt   DateTime? // Optional auto-cleanup
  viewCount   Int       @default(0)

  @@index([shareId])
  @@index([createdAt])
}
